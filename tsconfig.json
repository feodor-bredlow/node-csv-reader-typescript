{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"outDir": "./dist",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"strictNullChecks": true,
		"sourceMap": false,
		"esModuleInterop": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"src/**/*.test.ts"
	]
}